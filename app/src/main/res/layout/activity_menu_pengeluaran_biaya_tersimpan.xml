<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPengeluaranBiayaTersimpan"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
        android:id="@+id/tersimpan_pengeluaran_biaya"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Telah Tersimpan!"
                    android:fontFamily="@font/wavepool"
                    android:textColor="#000000"
                    android:textSize="15sp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Tanggal"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:text=":  "
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tgl_pengeluaran_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Sawah"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:ellipsize="none"
                            android:text=":  "
                            android:textColor="#000000"
                            android:maxLines="100"
                            android:scrollHorizontally="false"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/lahan_pengeluaran_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Periode"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:text=":  "
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/periode_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Jenis Barang/Jasa"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:text=":  "
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/jenis_barang_jasa_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Jumlah"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:text=":  "
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/jumlah_barang_jasa_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Harga / kg"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:text=":  "
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/harga_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Total Harga"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:text=":  "
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/total_barang_jasa_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Nama Pemasok"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:text=":  "
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/nama_pemasok_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Catatan"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_column="1"
                            android:text=":  "
                            android:textColor="#000000"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/catatan_pengeluaran_tersimpan"
                            android:layout_column="1"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_lihat_laporan_pengeluaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lihat Laporan"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn_kembali_menu_utama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Menu Utama"
                    android:textColor="#000000"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>